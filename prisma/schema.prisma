generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  DEVELOPER
  TESTER
  ADMIN
}

enum JobStatus {
  DRAFT
  ACTIVE
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  OPTED_IN
  VERIFIED
  TESTING
  COMPLETED
  REJECTED
}

enum PaymentStatus {
  PENDING
  ESCROWED
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum UsageEventType {
  APP_LAUNCH
  FEATURE_USED
  FEEDBACK_SUBMITTED
  SESSION_END
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // Hashed with bcrypt
  name          String?
  role          UserRole  @default(TESTER)
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Account Status
  suspended     Boolean   @default(false)
  suspendedAt   DateTime?
  suspendReason String?
  
  // Fraud Detection
  fraudScore    Int       @default(0)  // 0-100, higher = more suspicious
  flagged       Boolean   @default(false)
  lastIpAddress String?
  signupIp      String?
  
  // Developer fields
  stripeCustomerId String?  @unique
  developedJobs    TestingJob[]
  
  // Tester fields
  stripeAccountId  String?  @unique
  paypalEmail      String?
  phoneNumber      String?
  applications     Application[]
  deviceInfo       DeviceInfo?
  
  // Notifications
  pushSubscriptions PushSubscription[]
  notifications     Notification[]
  fraudLogs         FraudLog[]
  feedbacks         Feedback[]
  usageLogs         AppUsageLog[] @relation("UsageLogs")
  
  // Ratings
  averageRating    Float?   @default(0)
  totalRatings     Int?     @default(0)
}

model DeviceInfo {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  deviceModel    String
  androidVersion String
  screenSize     String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model TestingJob {
  id                String      @id @default(cuid())
  developerId       String
  developer         User        @relation(fields: [developerId], references: [id])
  
  // App Details
  appName           String
  appDescription    String      @db.Text
  packageName       String?
  googlePlayLink    String
  appCategory       String?
  
  // Requirements
  testersNeeded     Int         @default(10)
  testDuration      Int         @default(14)
  minAndroidVersion String?
  
  // Compensation
  paymentPerTester  Float
  totalBudget       Float
  platformFee       Float
  
  // Payment tracking (for refunds)
  stripeSessionId   String?     @unique
  stripePaymentIntent String?   @unique
  
  // Status
  status            JobStatus   @default(DRAFT)
  publishedAt       DateTime?
  startedAt         DateTime?
  completedAt       DateTime?
  
  // Relations
  applications      Application[]
  payments          Payment[]
  questionnaire     ProductionQuestionnaire?
  
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  
  @@index([developerId])
  @@index([status])
}

model Application {
  id                String              @id @default(cuid())
  jobId             String
  job               TestingJob          @relation(fields: [jobId], references: [id], onDelete: Cascade)
  testerId          String
  tester            User                @relation(fields: [testerId], references: [id])
  
  status            ApplicationStatus   @default(PENDING)
  
  // Verification
  optInVerified     Boolean             @default(false)
  verificationImage String?
  verificationImage2 String?
  verifiedAt        DateTime?
  
  // Fraud Detection
  ipAddress         String?
  userAgent         String?
  
  // Testing Period
  testingStartDate  DateTime?
  testingEndDate    DateTime?
  
  // Feedback
  feedback          String?             @db.Text
  rating            Int?
  
  // Engagement tracking
  usageLogs         AppUsageLog[]
  
  // Payment
  payment           Payment?
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  @@unique([jobId, testerId])
  @@index([jobId])
  @@index([testerId])
  @@index([status])
  @@index([ipAddress])
}

model Payment {
  id                String        @id @default(cuid())
  applicationId     String        @unique
  application       Application   @relation(fields: [applicationId], references: [id])
  jobId             String
  job               TestingJob    @relation(fields: [jobId], references: [id])
  
  amount            Float
  platformFee       Float
  totalAmount       Float
  
  status            PaymentStatus @default(PENDING)
  
  // Stripe IDs
  paymentIntentId   String?       @unique
  transferId        String?       @unique
  
  // Timestamps
  escrowedAt        DateTime?
  completedAt       DateTime?
  failedAt          DateTime?
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@index([status])
  @@index([jobId])
}

model PushSubscription {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  endpoint    String   @unique
  p256dh      String
  auth        String
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
}

model Notification {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  body        String
  url         String?
  type        String   // application_approved, testing_started, payment_received, etc.
  read        Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([read])
}

model FraudLog {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  type        String   // duplicate_ip, same_device, rapid_signup, suspicious_pattern, etc.
  severity    String   @default("low") // low, medium, high, critical
  description String   @db.Text
  metadata    String?  @db.Text // JSON data for additional context
  
  ipAddress   String?
  resolved    Boolean  @default(false)
  resolvedAt  DateTime?
  resolvedBy  String?  // Admin user id
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([type])
  @@index([severity])
  @@index([resolved])
  @@index([ipAddress])
}

model Feedback {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Feedback details
  type            String    // 'developer' or 'tester'
  rating          Int       // 1-5 stars
  title           String
  message         String    @db.Text
  
  // Approval workflow
  approved        Boolean   @default(false)
  approvedAt      DateTime?
  approvedBy      String?   // Admin user id
  
  // Display settings
  displayName     String?   // Optional name to display (privacy)
  companyName     String?   // Optional company name
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId])
  @@index([approved])
  @@index([type])
  @@index([rating])
}

model AppUsageLog {
  id              String    @id @default(cuid())
  applicationId   String
  application     Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  
  testerId        String
  tester          User      @relation("UsageLogs", fields: [testerId], references: [id], onDelete: Cascade)
  
  // Usage tracking
  eventType       UsageEventType
  featureName     String?   // e.g., "Login", "Payment", "Settings" - if feature_used
  sessionDuration Int?      // Duration in seconds if session_end
  
  // Context
  ipAddress       String?
  userAgent       String?
  
  createdAt       DateTime  @default(now())
  
  @@index([applicationId])
  @@index([testerId])
  @@index([eventType])
  @@index([createdAt])
}

model ProductionQuestionnaire {
  id              String    @id @default(cuid())
  jobId           String    @unique
  job             TestingJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  developerId     String
  
  // Part 1: About your closed test
  recruiterEase   String?   // very_easy, easy, moderate, difficult, very_difficult
  engagementSummary String? @db.Text // How testers used features, consistency with expected usage
  feedbackSummary String?   @db.Text // Summary of feedback received and how it was collected
  
  // Part 2: About your app
  targetAudience  String?   @db.Text // Who is the intended audience
  valueProposition String?  @db.Text // How app provides value (apps) or what makes it stand out (games)
  expectedInstalls String? // first_year_installs range
  
  // Part 3: Production readiness
  changesApplied  String?   @db.Text // Changes made based on closed test feedback
  readinessCriteria String? @db.Text // How you decided app is ready for production
  
  submitted       Boolean   @default(false)
  submittedAt     DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([developerId])
}

